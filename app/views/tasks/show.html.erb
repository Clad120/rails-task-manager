<div class="container">
  <h1><%= @tasks.title %></h1>
  <h2> <%= @tasks.details %> </h2>
  <% if @tasks.completed == true %>
  <h3 class="mb-3"><i class="far fa-check-square"></i> This task has been completed</h3>
  <% else %>
  <h3 class="mb-3"><i class="far fa-square"></i> This task hasn't been completed yet</h3>
  <% end %>
<button type="button" class="btn btn-primary"><%= link_to "Back to list", tasks_path %></button>
</div>
